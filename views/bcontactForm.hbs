<div class="row">
    <form action="createBcontact" method="POST" class="col s12">
        <div class="row">
            <div class="input-field col s6">
                <input id="bfname" name="bfname" type="text" class="validate">
                <label for="first_name">First Name</label>
            </div>
            <div class="input-field col s6">
                <input id="blname" name="blname" type="text" class="validate">
                <label for="last_name">Last Name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="bemail" name="bemail" type="email" class="validate">
                <label for="email">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="bcompanyname" name="bcompanyname" type="text" class="validate">
                <label for="bcompanyname">Company Name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="bphone" name="bphone" type="text" class="validate">
                <label for="bphone">Business Phone No</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="bofficeaddress" name="bofficeaddress" type="text" class="validate">
                <label for="bofficeaddress">Office Address</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="note" name="note" type="text" class="validate">
                <label for="note">Note</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <button class="btn waves-effect waves-light" type="submit" name="submit">Create Business Contact
                    <i class="material-icons right">send</i>
                </button>
            </div>
    </form>
    <div class="row">
        <form method="get" action="/bdcontact">
            <div class="input-field col s6">
                <button class="btn waves-effect waves-light" type="submit" name="submit">Business Contact's List
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    </div>

</div>