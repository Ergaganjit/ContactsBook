<div class="row">
    <form action="{{action}}" method="POST" class="col s12">
        <div class="row">
            <div class="input-field col s6">
                <input id="title" name="title" type="text" class="validate" value={{contact.title}}>
                <label for="title">Title</label>
            </div>
            <div class="input-field col s6">
                <input id="date" name="date" type="text" class="validate" value={{contact.date}}>
                <label for="schedule_date">Schedule Date</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="start_time" name="start_time" type="text" class="validate" value={{contact.start_time}}>
                <label for="start_time">Start Time</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="end_time" name="end_time" type="text" class="validate" value={{contact.end_time}}>
                <label for="address">End time</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="about" name="about" type="text" class="validate" value={{contact.about}}>
                <label for="about">About</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="note" name="note" type="text" class="validate" value={{contact.note}}>
                <label for="note">Note</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <button class="btn waves-effect waves-light" type="submit" name="submit">Submit
                    <i class="material-icons right">send</i>
                </button>
            </div>
    </form>
    {{#if hideAcontact}}
    {{else}}
    <div class="row">
        <form method="get" action="/adcontact">
            <div class="input-field col s6">
                <button class="btn waves-effect waves-light" type="submit" name="submit">Meetings Schedule List
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    </div>
    {{/if}}
</div>