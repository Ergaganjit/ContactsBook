<div class="container">
    <h4 align="center">
        Personal Contacts List
    </h4>

</div>

<table class="striped">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email id</th>
        <th>Address</th>
        <th>DOB</th>
        <th>Phone</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    {{#each pdcontacts}}
    <tr>
        <td>{{this.fname}} </td>
        <td>{{this.lname}} </td>
        <td>{{this.email}} </td>
        <td>{{this.address}} </td>
        <td>{{this.dob}} </td>
        <td>{{this.phone}} </td>
        <td>
            <form action="/pdcontacts/{{_id}}/delete" method="post">
                <button class="btn" type="submit"><i class="material-icons">delete</i></button>
            </form>
        </td>
        <td>
            <a class="btn" href="/pdcontacts/{{_id}}/update"><i class="material-icons">update</i></a>
        </td>

    </tr>
    {{/each}}
</table>