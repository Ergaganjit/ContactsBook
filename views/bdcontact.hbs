<div class="container">
    <h4 align="center">
        Business Contacts List
    </h4>

</div>

<table class="striped">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email id</th>
        <th>Company Name</th>
        <th>Business Phone No</th>
        <th>Office Address</th>
        <th>Note</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    {{#each bdcontact}}
    <tr>
        <td>{{this.bfname}} </td>
        <td>{{this.blname}} </td>
        <td>{{this.bemail}} </td>
        <td>{{this.bcompanyname}} </td>
        <td>{{this.bphone}} </td>
        <td>{{this.bofficeaddress}} </td>
        <td>{{this.note}} </td>
        <td>
            <form action="/bdcontact/{{_id}}/delete" method="post">
                <button class="btn" type="submit"><i class="material-icons">delete</i></button>
            </form>
        </td>
        <td>
            <a class="btn" href="/bdcontact/{{_id}}/update"><i class="material-icons">update</i></a>
        </td>

    </tr>
    {{/each}}
</table>